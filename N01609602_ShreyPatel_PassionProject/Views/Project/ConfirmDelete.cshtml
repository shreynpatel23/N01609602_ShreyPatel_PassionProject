@model N01609602_ShreyPatel_PassionProject.Models.Project
@{
    ViewBag.Title = "Confirm Delete Project";
}

<h2>Confirm Delete <span class="text-danger">@Model.ProjectName</span></h2>

<p class="mb-0 mt-3">Are you sure you want to delete <span class="fw-bold"> @Model.ProjectName </span></p>
<p>Please keep in mind this action cannot be undone!</p>
<div class="d-flex align-items-center gap-4 mt-4">
    <a href="/Project/Details/@Model.ProjectId" class="btn btn-secondary">Cancel</a>

    <form action="/Project/Delete/@Model.ProjectId" method="POST">
        <input type="submit" class="btn btn-danger" value="Confirm Delete" />
    </form>
</div>
