
@{
    ViewBag.Title = "Add Project";
}

<h2>Add Project</h2>

<form action="/Project/Create" method="POST">
    <div class="mb-3">
        <label for="ProjectName" class="form-label">Project Name</label>
        <input autocomplete="off" required type="text" class="form-control" id="ProjectName" name="ProjectName" placeholder="Enter project name here" aria-describedby="ProjectName">
    </div>
    <div class="mb-3">
        <label for="ProjectDescription" class="form-label">Project Description</label>
        <textarea autocomplete="off" required class="form-control" id="ProjectDescription" name="ProjectDescription" placeholder="Write a two line project description" rows="3"></textarea>
    </div>
    <div class="mb-3">
        <label for="DueDate" class="form-label">Due Date</label>
        <input autocomplete="off" required type="date" class="form-control" id="DueDate" name="DueDate" placeholder="YYYY-MM-DD">
    </div>
    <div class="d-flex align-items-center gap-4">
        <a href="/Project/List" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
