﻿@model IEnumerable<N01609602_ShreyPatel_PassionProject.Models.Project>

@{
    ViewBag.Title = "Project List";
}

<div class="d-flex align-items-center gap-4">
    <h2>Projects</h2>
    <a href="/Project/Add" class="btn btn-primary m-0">Add Project</a>
</div>
@foreach (var project in Model)
{
    <div class="py-4 border-bottom">
        <h3><a href="/Project/Details/@project.ProjectId" class="text-dark">@project.ProjectName</a></h3>
        <p class="text-dark">@project.ProjectDescription</p>
        <p class="text-dark">Due Date: <br /> <span class="fw-bold">@project.DueDate</span></p>
    </div>
}