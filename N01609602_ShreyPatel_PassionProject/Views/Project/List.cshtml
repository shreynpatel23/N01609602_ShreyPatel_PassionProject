﻿@model IEnumerable<N01609602_ShreyPatel_PassionProject.Models.Project>

@{
    ViewBag.Title = "Project List";
}

<h2>Projects</h2>

<div class="mt-4">
    @foreach (var project in Model)
    {
        <div class="card w-50">
            <div class="card-body">
                <h5 class="card-title"><a href="/Project/Details/@project.ProjectId">@project.ProjectName</a></h5>
                <p class="card-text">@project.ProjectDescription</p>
                <p class="card-text">@project.DueDate</p>
                <a href="/Project/Details/@project.ProjectId" class="btn btn-primary">View Details</a>
            </div>
        </div>
    }
 </div>