﻿@model IEnumerable<N01609602_ShreyPatel_PassionProject.Models.ActivityDto>

@{
    ViewBag.Title = "Activity List";
}

<div class="d-flex align-items-center gap-4">
    <h2>Activity List</h2>
    <a href="/Activity/Add" class="btn btn-primary">Add Activity</a>
</div>
@foreach (var activity in Model)
{
    <div class="py-4 border-bottom">
        <h3><a href="/Activity/Details/@activity.ActivityId" class="text-dark">@activity.ActivityName</a></h3>
        <p class="text-dark">@activity.ActivityDescription</p>
    </div>
}

