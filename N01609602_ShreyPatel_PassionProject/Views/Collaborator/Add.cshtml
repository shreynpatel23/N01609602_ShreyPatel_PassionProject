
@{
    ViewBag.Title = "Add Collaborator";
    ViewBag.Roles = new List<string> { "Project Manager", "Web Developer", "UX Designer", "Database Manager", "Human Resources", "Sales Executive" };
}

<h2>Add Collaborator</h2>

<form action="/Collaborator/Create" method="POST">
    <div class="mb-3">
        <label for="CollaboratorFirstName" class="form-label">First Name</label>
        <input autocomplete="off" type="text" required class="form-control" id="CollaboratorFirstName" name="CollaboratorFirstName" placeholder="Enter first name here" aria-describedby="CollaboratorFirstName">
    </div>
    <div class="mb-3">
        <label for="CollaboratorLastName" class="form-label">Last Name</label>
        <input autocomplete="off" type="text" required class="form-control" id="CollaboratorLastName" name="CollaboratorLastName" placeholder="Enter last name here" aria-describedby="CollaboratorLastName">
    </div>
    <div class="mb-3">
        <label for="CollaboratorEmail" class="form-label">Email</label>
        <input autocomplete="off" type="email" required class="form-control" id="CollaboratorEmail" name="CollaboratorEmail" placeholder="Enter email here" aria-describedby="CollaboratorEmail">
    </div>
    <div class="mb-3">
        <label for="CollaboratorRole" class="form-label">Role</label>
        <select class="form-select" required id="CollaboratorRole" name="CollaboratorRole" aria-describedby="CollaboratorRole">
            @foreach (var role in ViewBag.Roles)
            {
                <option value="@role">@role</option>
            }
        </select>
    </div>
    <div class="d-flex align-items-center gap-4">
        <a href="/Collaborator/List" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>


